<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarTracking.MobileApp.Pages.UserRegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="15">
            <Label Text="Sign up" FontSize="32" HorizontalOptions="Center" />

            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   Keyboard="Email"
                   FontSize="18"
                   HeightRequest="48" />
            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="True"
                   FontSize="18"
                   HeightRequest="48" />
            <Entry x:Name="ConfirmPasswordEntry"
                   Placeholder="Confirm Password"
                   IsPassword="True"
                   FontSize="18"
                   HeightRequest="48" />

            <Button Text="Register" Clicked="OnRegisterButtonClicked" FontSize="18" HeightRequest="48" />

            <Label x:Name="ErrorMessage" TextColor="Red" IsVisible="False" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>